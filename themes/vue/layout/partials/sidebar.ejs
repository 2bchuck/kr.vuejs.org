<div class="sidebar">
    <ul class="main-menu">
        <%- partial('partials/main_menu', { context: 'sidebar' }) %>
    </ul>
    <div class="list">
        <div class="main-sponsor">
            <span>지원을 받고 있습니다.</span><br>
            <a href="http://www.thedifferenceengine.io/" target="_blank"
                style="background-color: #f3f3f3; padding: 10px 0">
                <img src="/images/tde.png">
            </a>
        </div>
        <a class="become-backer" href="/support-vuejs">
            후원하기
        </a>
        <h2>
            <%- type === 'api' ? 'API' : (type.charAt(0).toUpperCase() + type.slice(1)) %>
            <% if (type !== 'cookbook') { %>
                <select class="version-select">
                    <option value="SELF" selected>2.0</option>
                    <option value="v1">1.0</option>
                    <option value="012">0.12</option>
                    <option value="011">0.11</option>
                </select>
            <% } %>
        </h2>
        <ul class="menu-root">
            <% type !== 'api' && site.pages.find({type: type}).sort('order').each(function (p) { %>
                <% var fileName = p.path.replace(/^.+?\/([\w-]+)\.html/, '$1') %>
                <% if (type === 'guide') { %>
                    <% if (fileName === 'installation') { %>
                      <li><h3>필수</h3></li>
                    <% } %>
                    <% if (fileName === 'reactivity') { %>
                      <li><h3>고급</h3></li>
                    <% } %>
                    <% if (fileName === 'migration') { %>
                      <li><h3>마이그레이션 방법</h3></li>
                    <% } %>
                    <% if (fileName === 'comparison') { %>
                      <li><h3>기타</h3></li>
                    <% } %>
                <% } %>
                <% if (type === 'cookbook') { %>
                    <% if (p.order === 1.1) { %>
                      <li><h3>Vue Instance</h3></li>
                    <% } %>
                    <!-- Move cookbook sections here once they have -->
                    <!-- at least one recipe -->
                <% } %>
                <li>
                    <a href="/<%- p.path %>" class="sidebar-link<%- page.title === p.title ? ' current' : '' %><%- p.is_new ? ' new' : '' %>"><%- p.title %></a>
                </li>
            <% }) %>
            <% if (type === 'cookbook') { %>
                <li><h3>컴포넌트</h3></li>
                <li><h4>폼 입력</h4></li>
                <li><h4>써드파티 통합</h4></li>
                <li><h3>전환</h3></li>
                <li><h3>지시문</h3></li>
                <li><h3>Vue Router</h3></li>
                <li><h3>Vuex</h3></li>
            <% } %>
        </ul>
    </div>
</div>
